<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FullContainerStyle"
    tools:context=".EditorActivity">

    <LinearLayout style="@style/TextFieldsContainer">

        <android.support.design.widget.TextInputLayout style="@style/FullWrapperContainerStyle">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/thought_title"
                style="@style/TitleEditTextStyle" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/FullWrapperContainerStyle">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/thought_content"
                style="@style/ContentEditTextStyle" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout style="@style/ButtonsContainer">

            <Button
                android:id="@+id/btn_save"
                style="@style/BtnSaveStyle" />

            <Button
                android:id="@+id/btn_delete_thought"
                style="@style/BtnDeleteStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>