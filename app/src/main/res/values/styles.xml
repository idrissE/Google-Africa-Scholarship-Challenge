<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WrapperContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FullWrapperContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FloatingBtnStyle" parent="WrapperContainerStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/base_dim</item>
        <item name="android:src">@drawable/ic_note_add</item>
    </style>

    <style name="ItemContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/base_dim</item>
    </style>

    <style name="ThoughtTitleStyle" parent="WrapperContainerStyle">
        <item name="android:layout_marginBottom">@dimen/half_dim</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="ThoughtSummaryStyle" parent="WrapperContainerStyle">
        <item name="android:layout_marginBottom">@dimen/half_dim</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TitleEditTextStyle" parent="FullWrapperContainerStyle">
        <item name="android:hint">@string/title_hint</item>
    </style>

    <style name="ContentEditTextStyle" parent="FullWrapperContainerStyle">
        <item name="android:hint">@string/content_hint</item>
    </style>

    <style name="BtnBaseStyle" parent="WrapperContainerStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextFieldsContainer" parent="FullWrapperContainerStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/base_dim</item>
    </style>

    <style name="ButtonsContainer" parent="FullWrapperContainerStyle">
        <item name="android:layout_marginTop">@dimen/base_dim</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BtnSaveStyle" parent="BtnBaseStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:text">@string/save</item>
    </style>

    <style name="BtnDeleteStyle" parent="BtnBaseStyle">
        <item name="android:layout_marginLeft">@dimen/base_dim</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:text">@string/delete</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ErrorMsgStyle" parent="WrapperContainerStyle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/no_thoughts_error</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ProgressBarStyle" parent="WrapperContainerStyle">
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>
